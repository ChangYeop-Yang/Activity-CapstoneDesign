<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="#434343"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"

            android:background="#434343"
            android:orientation="vertical">



            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:background="@drawable/background_border"
                android:textColor="#ffffff"
                android:drawableTop="@drawable/ic_tv_white_36dp"

                android:text="HOME"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:drawableTop="@drawable/icons8_control_panel_50"
                android:background="@drawable/background_border"
                android:textColor="#ffffff"
                android:text="REMOTE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:background="@drawable/background_border"
                android:textColor="#ffffff"
                android:drawableTop="@drawable/ic_filter_hdr_white_36dp"

                android:text="OUTSIDE"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_border"
                android:drawableTop="@drawable/ic_settings_white_36dp"
                android:drawablePadding="10dp"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:textColor="#ffffff"
                android:text="SETTING"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#434343"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="REMOTE CONTROL"
                android:textStyle="bold"
                android:gravity="center"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:background="#434343"
                android:textColor="#ffffff"
                android:drawableLeft="@drawable/ic_power_settings_new_white_48dp"
                android:text="POWER"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="12dp"
                    android:paddingRight="35dp"
                    android:background="#434343"
                    android:textColor="#ffffff"
                    android:drawableLeft="@drawable/ic_keyboard_arrow_up_white_48dp"
                    android:drawablePadding="0dp"
                    android:text="UP"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="0dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="35dp"
                    android:background="#434343"
                    android:textColor="#ffffff"
                    android:drawableLeft="@drawable/ic_keyboard_arrow_down_white_48dp"
                    android:text="DOWN"/>

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:text="HUE CONTROL"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:text="POWER"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#434343"
                    android:paddingStart="10dp"
                    android:paddingTop="40dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/pencil_red" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="40dp"
                    android:scaleType="centerCrop"
                    android:background="#434343"
                    app:srcCompat="@drawable/pencil_green" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="40dp"
                    android:scaleType="centerCrop"
                    android:background="#434343"
                    app:srcCompat="@drawable/pencil_blue" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="40dp"
                    android:scaleType="centerCrop"
                    android:background="#434343"
                    app:srcCompat="@drawable/pencil_pink" />

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


</android.support.constraint.ConstraintLayout>

